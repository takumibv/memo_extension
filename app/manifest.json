{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "0.1.1",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "images/icon_16.png",
    "128": "images/icon_128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
